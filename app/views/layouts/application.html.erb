<!DOCTYPE html>
<html>
  <head>
    <title>TestNeGuru</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <h1 class="nav title"><%= link_to('Test Ne Guru', tests_path) %></h1>

  <% if logged_in? %>
    <p class="nav user">Welcome, <b><%= current_user.nickname %></b></p>
    <p class="nav user"><%= link_to('Logout', logout_path) %></p>
  <% else %>
    <p class="nav user"><%= link_to('Log in', login_path) %></p>
    <p class="nav user"><%= link_to('Sign up', signup_path) %></p>
  <% end %>

    <%= yield %>

    <%= render 'shared/footer' %>
  </body>
</html>
