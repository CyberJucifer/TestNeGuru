<h2><%= t('.become_ne_guru') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :first_name, t('.first_name') %><br />
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field form-group">
    <%= f.label :last_name, t('.last_name') %><br />
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field form-group">
    <%= f.label :email, t('.email') %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, t('.password') %>
    <% if @minimum_password_length %>
    <em>(<%= t('.characters_minimum', minimum_password_length: @minimum_password_length) %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field password-confirmation form-group">
    <%= f.label :password_confirmation, t('.password_confirmation') %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    <%= octicon 'check', class: 'text-success hide' %>
    <%= octicon 'x', class: 'text-failure hide' %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up'), class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
