<h1><%= badge_header %></h1>
<%= form_with(model: [:admin, @badge], local: true) do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <p>
    <%= form.label :title, t('.title') %>*<br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :image, t('.image') %>*<br>
    <%= form.text_field :image %>
  </p>

  <div class='rule'>
    <%= form.label :rule, t('.rule') %>*:
    <%= form.select :rule, Badge.rules.keys.map {|key| [t(".#{key}"), key]}, prompt: true %>
  </div>

  <div class="parameter-categories hide">
    <%= form.label :parameter, t('.parameter') %>*<br>
    <%= form.collection_select :parameter, Category.all, :id, :title %>
  </div>

  <div class="parameter-levels hide">
    <%= form.label :parameter, t('.parameter')  %>*<br>
    <%= form.select :parameter, Test.select([:id,:level]).pluck(:level).uniq, disabled: true %>
  </div>


  <br><%= form.submit t('.create'), class: "btn btn-primary" %>
<% end %>