<tr>
  <td class="align-middle"><%= badge.title %></td>
  <td class="align-middle"><%= image_tag "#{badge.image}", width: 80, height: 80 %></td>
  <td><%= show_rule(badge) %></td>
  <td class="align-middle"><%= link_to(t('admin.answers.answer.show'), admin_badge_path(badge))%></td>
  <td class="align-middle">
    <%= link_to(t('.edit'), edit_admin_badge_path(badge))%>
  </td>
  <td class="align-middle"> <%= link_to(t('admin.answers.answer.delete'),
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: t('admin.answers.answer.are_you_sure') } ) %>
  </td>
</tr>