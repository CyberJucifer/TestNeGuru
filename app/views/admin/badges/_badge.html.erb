<tr>
  <td><%= badge.title %></td>
  <td><%= image_tag "#{badge.image}", width: 80, height: 80 %></td>
  <td><%= I18n.t(".#{badge.rule}") %></td>
  <td><%= link_to('Show', admin_badge_path(badge))%></td>
  <td>
    <%= link_to('Edit', edit_admin_badge_path(badge))%>
  </td>
  <td> <%= link_to('Delete',
                admin_badge_path(badge),
                method: :delete,
                data: { confirm: 'Are you sure?' } ) %>
  </td>
</tr>