<%= form_with model: [:admin, @question, @answer], local: true do |form| %>
  <%= render 'shared/errors', resource: @answer %>

  <div class="form-outline">
    <%= form.label :title %><br>
    <%= form.text_area :title, id: :answer_title, rows: 7, cols: 60 %>
  </div>

  <p>
    <%= form.label :correct %>
    <%= form.check_box :correct, id: :answer_correct %>
  </p>

  <p><%= form.submit 'New answer', class: "btn btn-primary" %></p>
<% end %>
