<h1><%= @test.title %></h1>

<table class="table table-striped table-bordered">
    <tr>
      <th class="sort-by-title pointer">
        ID
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th>Question</th>
      <th colspan="3">Actions</th>
    </tr>

  <%= render partial: 'admin/questions/question', collection: @test.questions %>
</table>

<p> Amount of questions: <%= @questions.count %> </p><br>

<%= link_to 'Edit test', edit_admin_test_path(@test) %><br>
<%= link_to 'Create new question', new_admin_test_question_path(@test) %><br>
<%= link_to 'Back', admin_tests_path %>
