<h1><%= @test.title %></h1>

<table class="table table-striped table-bordered">
    <tr>
      <th class="sort-by-title pointer">
        <%= t('.id') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t('.question') %></th>
      <th colspan="3"><%= t('.actions') %></th>
    </tr>

  <%= render partial: 'admin/questions/question', collection: @test.questions %>
</table>

<p> <%= t('.questions_amount', count: @questions.count) %> </p><br>

<%= link_to t('.edit_test'), edit_admin_test_path(@test) %><br>
<%= link_to t('.new_question'), new_admin_test_question_path(@test) %><br>
<%= link_to t('test_passages.show.back_to_tests'), admin_tests_path %>
